@using ProjectManagementSystem.Models.ClassModel
@model AddClassViewModel
@{
    ViewData["Title"] = "Add Class";
}

    <form asp-action="AddClass" method="post" class="m-5">

        <div class="row">
            <div class="mb-3">
                <label>Subject Title</label>
                 <input class="form-control" type="text" asp-for="Subject_Title" />
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label>Description</label> 
                <textarea class="form-control" asp-for="Description">
                </textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-secondary m-2">Create Class</button>
    </form>
